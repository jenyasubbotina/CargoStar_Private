<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="uz.alexits.cargostar.view.fragment.ProfileFragment"
    android:id="@+id/whiteCardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bottom_radius_white"
        android:layout_marginHorizontal="@dimen/s_margin"
        android:layout_marginBottom="@dimen/m_margin"
        android:elevation="8dp">

        <TextView
            android:id="@+id/personal_data_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/logout_text_view"
            android:layout_marginTop="58dp"
            android:layout_marginStart="35dp"
            android:textSize="19sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/geometria_bold"
            android:text="@string/personal_information"/>

        <TextView
            android:id="@+id/logout_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/personal_data_text_view"
            app:layout_constraintBottom_toBottomOf="@id/personal_data_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="17sp"
            android:textColor="@color/colorRed"
            android:fontFamily="@font/geometria_medium"
            android:padding="24dp"
            android:text="@string/logout"
            android:layout_marginEnd="23dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <View
            android:id="@+id/authorization_data_stroke"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/personal_data_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="17dp"
            android:layout_marginHorizontal="24dp"
            android:background="#F2F2F2"/>

        <TextView
            android:id="@+id/autorization_data_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/authorization_data_stroke"
            app:layout_constraintStart_toStartOf="@id/personal_data_text_view"
            android:layout_marginTop="29dp"
            android:textSize="19sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/authorization_data"/>

        <TextView
            android:id="@+id/user_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/autorization_data_text_view"
            app:layout_constraintStart_toStartOf="@id/personal_data_text_view"
            android:layout_marginTop="29dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/user_id"/>

        <EditText
            android:id="@+id/user_id_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_id_text_view"
            app:layout_constraintStart_toStartOf="@id/personal_data_text_view"
            app:layout_constraintEnd_toStartOf="@id/login_edit_text"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:inputType="text"
            android:background="@drawable/edit_text_locked"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"/>

        <TextView
            android:id="@+id/login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/user_id_text_view"
            app:layout_constraintStart_toStartOf="@id/login_edit_text"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/login"/>

        <EditText
            android:id="@+id/login_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/user_id_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_id_edit_text"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="35dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:focusableInTouchMode="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_id_edit_text"
            app:layout_constraintStart_toStartOf="@id/user_id_text_view"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/password"/>

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/password_text_view"
            app:layout_constraintStart_toStartOf="@id/user_id_edit_text"
            app:layout_constraintEnd_toEndOf="@id/user_id_edit_text"
            android:layout_marginTop="4dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="@color/colorBlack"
            android:padding="17dp"/>

        <TextView
            android:id="@+id/email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/password_text_view"
            app:layout_constraintStart_toStartOf="@id/login_text_view"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/email"/>

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/password_edit_text"
            app:layout_constraintStart_toStartOf="@id/login_edit_text"
            app:layout_constraintEnd_toEndOf="@id/login_edit_text"
            android:inputType="textEmailAddress"
            android:minLines="2"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:focusableInTouchMode="false"
            android:focusable="false"/>

        <View
            android:id="@+id/personal_information_stroke"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/password_edit_text"
            app:layout_constraintStart_toStartOf="@id/authorization_data_stroke"
            app:layout_constraintEnd_toEndOf="@id/authorization_data_stroke"
            android:layout_marginTop="46dp"
            android:background="#F2F2F2" />

        <TextView
            android:id="@+id/personal_information_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/personal_information_stroke"
            app:layout_constraintStart_toStartOf="@id/personal_data_text_view"
            android:layout_marginTop="29dp"
            android:textSize="19sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/personal_information"/>

        <TextView
            android:id="@+id/position_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/personal_information_text_view"
            app:layout_constraintStart_toStartOf="@id/personal_data_text_view"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/position"/>

        <EditText
            android:id="@+id/position_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/position_text_view"
            app:layout_constraintStart_toStartOf="@id/user_id_edit_text"
            app:layout_constraintEnd_toEndOf="@id/user_id_edit_text"
            android:layout_marginTop="4dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:focusableInTouchMode="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/first_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/position_text_view"
            app:layout_constraintStart_toStartOf="@id/login_text_view"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/first_name"/>

        <EditText
            android:id="@+id/first_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/position_edit_text"
            app:layout_constraintStart_toStartOf="@id/login_edit_text"
            app:layout_constraintEnd_toEndOf="@id/login_edit_text"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="@color/colorBlack"
            android:padding="17dp"/>

        <TextView
            android:id="@+id/last_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/position_edit_text"
            app:layout_constraintStart_toStartOf="@id/personal_data_text_view"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/last_name"/>

        <EditText
            android:id="@+id/last_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/last_name_text_view"
            app:layout_constraintStart_toStartOf="@id/user_id_edit_text"
            app:layout_constraintEnd_toEndOf="@id/user_id_edit_text"
            android:layout_marginTop="4dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="@color/colorBlack"
            android:padding="17dp"/>

        <TextView
            android:id="@+id/middle_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/last_name_text_view"
            app:layout_constraintStart_toStartOf="@id/login_text_view"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/middle_name"/>

        <EditText
            android:id="@+id/middle_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/last_name_edit_text"
            app:layout_constraintStart_toStartOf="@id/login_edit_text"
            app:layout_constraintEnd_toEndOf="@id/login_edit_text"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="@color/colorBlack"
            android:padding="17dp"/>

        <TextView
            android:id="@+id/phone_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/last_name_edit_text"
            app:layout_constraintStart_toStartOf="@id/user_id_text_view"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/phone_number"/>

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phone_number_text_view"
            app:layout_constraintStart_toStartOf="@id/user_id_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/user_id_edit_text"
            android:layout_marginTop="4dp"
            android:inputType="phone"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="@color/colorBlack"
            android:padding="17dp"/>

        <TextView
            android:id="@+id/main_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/phone_number_text_view"
            app:layout_constraintStart_toStartOf="@id/login_text_view"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/main_address"/>

        <EditText
            android:id="@+id/address_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/phone_number_edit_text"
            app:layout_constraintStart_toStartOf="@id/login_edit_text"
            app:layout_constraintEnd_toEndOf="@id/login_edit_text"
            android:inputType="textPostalAddress"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/geolocation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phone_number_edit_text"
            app:layout_constraintStart_toStartOf="@id/user_id_text_view"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/geolocation"/>

        <EditText
            android:id="@+id/geolocation_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/geolocation_text_view"
            app:layout_constraintStart_toStartOf="@id/user_id_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/user_id_edit_text"
            android:layout_marginTop="4dp"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/country_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/geolocation_text_view"
            app:layout_constraintStart_toStartOf="@id/login_text_view"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/country"/>

        <EditText
            android:id="@+id/country_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/geolocation_edit_text"
            app:layout_constraintStart_toStartOf="@id/login_edit_text"
            app:layout_constraintEnd_toEndOf="@id/login_edit_text"
            android:inputType="textCapWords"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/city_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/geolocation_edit_text"
            app:layout_constraintStart_toStartOf="@id/geolocation_text_view"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/city"/>

        <EditText
            android:id="@+id/city_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/city_text_view"
            app:layout_constraintStart_toStartOf="@id/geolocation_edit_text"
            app:layout_constraintEnd_toEndOf="@id/geolocation_edit_text"
            android:layout_marginTop="4dp"
            android:inputType="textCapWords"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/zip_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/city_text_view"
            app:layout_constraintStart_toStartOf="@id/country_text_view"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/post_index"/>

        <EditText
            android:id="@+id/zip_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/city_edit_text"
            app:layout_constraintStart_toStartOf="@+id/country_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/country_edit_text"
            android:layout_marginTop="4dp"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_locked"
            android:textSize="16sp"
            android:fontFamily="@font/geometria_actual"
            android:textColor="#A5ABC0"
            android:padding="17dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/photo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/city_edit_text"
            app:layout_constraintStart_toStartOf="@id/city_text_view"
            android:layout_marginTop="21dp"
            android:textSize="16sp"
            android:textColor="#A5ABC0"
            android:fontFamily="@font/geometria_actual"
            android:text="@string/photo"/>

            <EditText
                android:id="@+id/photo_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/photo_text_view"
                app:layout_constraintStart_toStartOf="@+id/city_edit_text"
                app:layout_constraintEnd_toEndOf="@+id/city_edit_text"
                android:layout_marginTop="4dp"
                android:inputType="text"
                android:background="@drawable/edit_text_locked"
                android:textSize="16sp"
                android:fontFamily="@font/geometria_actual"
                android:textColor="@color/colorBlack"
                android:padding="17dp"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <ImageView
                android:id="@+id/photo_result_image_view"
                android:layout_width="19dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toStartOf="@id/photo_edit_text"
                app:layout_constraintTop_toTopOf="@id/photo_edit_text"
                app:layout_constraintBottom_toBottomOf="@id/photo_edit_text"
                android:src="@drawable/ic_image_green"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/signature"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="25dp"
                android:layout_height="22dp"
                app:layout_constraintEnd_toEndOf="@id/photo_edit_text"
                app:layout_constraintTop_toTopOf="@id/photo_edit_text"
                app:layout_constraintBottom_toBottomOf="@id/photo_edit_text"
                android:src="@drawable/ic_download"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/signature"/>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/photo_edit_text"
            app:layout_constraintStart_toStartOf="@id/personal_data_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="44dp"
            android:text="@string/save"
            android:fontFamily="@font/geometria_medium"
            android:textSize="19sp"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:background="@drawable/btn_gradient_orange"
            android:paddingHorizontal="33dp"
            android:paddingVertical="14dp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>