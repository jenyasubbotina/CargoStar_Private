<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="uz.alexits.cargostar.view.fragment.MainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_refresh_layout">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/colorBlue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"/>

            <View
                android:id="@+id/upper_card_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottom_card_view"
                android:background="@drawable/card_bottom_radius_white"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="18dp"
                android:elevation="8dp" />

            <TextView
                android:id="@+id/bids_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/upper_card_view"
                app:layout_constraintStart_toStartOf="@id/upper_card_view"
                android:layout_marginTop="48dp"
                android:layout_marginStart="36dp"
                android:textSize="19sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:text="@string/bids"
                android:elevation="8dp"/>

            <View
                android:id="@+id/upper_stroke"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/bids_text_view"
                app:layout_constraintStart_toStartOf="@id/upper_card_view"
                app:layout_constraintEnd_toEndOf="@id/upper_card_view"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="17dp"
                android:background="#F2F2F2"/>

            <ImageView
                android:id="@+id/public_requests_image_view"
                android:layout_width="122dp"
                android:layout_height="116dp"
                app:layout_constraintTop_toBottomOf="@id/upper_stroke"
                app:layout_constraintStart_toStartOf="@id/upper_stroke"
                android:layout_marginTop="48dp"
                android:layout_marginStart="31dp"
                android:src="@drawable/img_public_bids"
                android:background="@drawable/card_white"
                android:contentDescription="@string/cargostar"
                android:paddingVertical="21dp"
                android:paddingHorizontal="35dp"
                android:elevation="8dp"/>

            <TextView
                android:id="@+id/public_requests_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/public_requests_image_view"
                app:layout_constraintStart_toStartOf="@id/public_requests_image_view"
                app:layout_constraintEnd_toEndOf="@id/public_requests_image_view"
                android:text="@string/public_requests"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_medium"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:elevation="8dp"/>

            <ImageView
                android:id="@+id/my_requests_image_view"
                android:layout_width="122dp"
                android:layout_height="116dp"
                app:layout_constraintTop_toTopOf="@id/public_requests_image_view"
                app:layout_constraintBottom_toBottomOf="@id/public_requests_image_view"
                app:layout_constraintStart_toEndOf="@id/public_requests_image_view"
                app:layout_constraintEnd_toStartOf="@id/create_parcel_image_view"
                android:src="@drawable/img_my_bids"
                android:background="@drawable/card_white"
                android:contentDescription="@string/cargostar"
                android:paddingVertical="21dp"
                android:paddingHorizontal="35dp"
                android:elevation="8dp"/>

            <TextView
                android:id="@+id/my_requests_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/my_requests_image_view"
                app:layout_constraintStart_toStartOf="@id/my_requests_image_view"
                app:layout_constraintEnd_toEndOf="@id/my_requests_image_view"
                android:text="@string/my_requests"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_medium"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:elevation="8dp"/>

            <ImageView
                android:id="@+id/create_parcel_image_view"
                android:layout_width="122dp"
                android:layout_height="116dp"
                app:layout_constraintTop_toTopOf="@id/public_requests_image_view"
                app:layout_constraintBottom_toBottomOf="@id/public_requests_image_view"
                app:layout_constraintEnd_toEndOf="@id/upper_stroke"
                android:layout_marginEnd="31dp"
                android:src="@drawable/img_my_bids"
                android:background="@drawable/card_white"
                android:contentDescription="@string/cargostar"
                android:paddingVertical="21dp"
                android:paddingHorizontal="35dp"
                android:elevation="8dp"/>

            <TextView
                android:id="@+id/create_receipt_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/create_parcel_image_view"
                app:layout_constraintStart_toStartOf="@id/create_parcel_image_view"
                app:layout_constraintEnd_toEndOf="@id/create_parcel_image_view"
                android:text="@string/create_receipt"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_medium"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:elevation="8dp"/>

            <View
                android:id="@+id/bottom_card_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/upper_card_view"
                app:layout_constraintStart_toStartOf="@id/upper_card_view"
                app:layout_constraintEnd_toEndOf="@id/upper_card_view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/card_top_radius_white"
                android:layout_marginTop="16dp"
                android:elevation="8dp" />

            <TextView
                android:id="@+id/parcels_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/bottom_card_view"
                app:layout_constraintStart_toStartOf="@id/bottom_card_view"
                android:layout_marginTop="48dp"
                android:layout_marginStart="36dp"
                android:textSize="19sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_bold"
                android:text="@string/parcels"
                android:elevation="8dp"/>

            <View
                android:id="@+id/bottom_stroke"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/parcels_text_view"
                app:layout_constraintStart_toStartOf="@id/bottom_card_view"
                app:layout_constraintEnd_toEndOf="@id/bottom_card_view"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="17dp"
                android:background="#F2F2F2"/>

            <ImageView
                android:id="@+id/current_parcels_image_view"
                android:layout_width="122dp"
                android:layout_height="116dp"
                app:layout_constraintTop_toBottomOf="@id/bottom_stroke"
                app:layout_constraintStart_toStartOf="@id/bottom_stroke"
                android:layout_marginTop="48dp"
                android:layout_marginStart="31dp"
                android:src="@drawable/img_current_parcels"
                android:background="@drawable/card_white"
                android:contentDescription="@string/cargostar"
                android:paddingVertical="21dp"
                android:paddingHorizontal="35dp"
                android:elevation="8dp"/>

            <TextView
                android:id="@+id/current_transportations_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/current_parcels_image_view"
                app:layout_constraintStart_toStartOf="@id/current_parcels_image_view"
                app:layout_constraintEnd_toEndOf="@id/current_parcels_image_view"
                android:text="@string/current_parcels"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_medium"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:elevation="8dp"/>

            <ImageView
                android:id="@+id/scan_parcels_image_view"
                android:layout_width="122dp"
                android:layout_height="116dp"
                app:layout_constraintTop_toTopOf="@id/current_parcels_image_view"
                app:layout_constraintBottom_toBottomOf="@id/current_parcels_image_view"
                app:layout_constraintStart_toEndOf="@id/current_parcels_image_view"
                app:layout_constraintEnd_toStartOf="@id/parcel_delivery_image_view"
                android:src="@drawable/img_scan_parcels"
                android:background="@drawable/card_white"
                android:contentDescription="@string/cargostar"
                android:paddingVertical="21dp"
                android:paddingHorizontal="35dp"
                android:elevation="8dp"/>

            <TextView
                android:id="@+id/scan_parcels_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/scan_parcels_image_view"
                app:layout_constraintStart_toStartOf="@id/scan_parcels_image_view"
                app:layout_constraintEnd_toEndOf="@id/scan_parcels_image_view"
                android:text="@string/scan_parcels"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_medium"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:elevation="8dp"/>

            <ImageView
                android:id="@+id/parcel_delivery_image_view"
                android:layout_width="122dp"
                android:layout_height="116dp"
                app:layout_constraintTop_toTopOf="@id/current_parcels_image_view"
                app:layout_constraintBottom_toBottomOf="@id/current_parcels_image_view"
                app:layout_constraintEnd_toEndOf="@id/bottom_stroke"
                android:layout_marginEnd="31dp"
                android:src="@drawable/img_parcels_delivery"
                android:background="@drawable/card_white"
                android:contentDescription="@string/cargostar"
                android:paddingVertical="21dp"
                android:paddingHorizontal="35dp"
                android:elevation="8dp"/>

            <TextView
                android:id="@+id/parcel_delivery_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/parcel_delivery_image_view"
                app:layout_constraintStart_toStartOf="@id/parcel_delivery_image_view"
                app:layout_constraintEnd_toEndOf="@id/parcel_delivery_image_view"
                android:text="@string/delivery_list"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_medium"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:elevation="8dp"/>

            <TextView
                android:id="@+id/app_version_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/bottom_card_view"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:text="@string/app_version"
                android:textStyle="italic"
                android:textColor="#AFAFAF"
                android:fontFamily="@font/geometria_light"
                android:textSize="12sp"
                android:elevation="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>